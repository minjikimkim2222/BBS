    pageEncoding="UTF-8"%>
<%@ page import="java.io.PrintWriter" %>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Admin login</title>
	</head>
<body>
	<h1>admin 로그인하세요</h1>
	<form method = "post" action="processLoginAdmin.jsp">
		<p><input type="text" name="username" placeholder="사용자명"></p>
		<p><input type="password" name="password" placeholder="비밀번호"></p>
		<p><input type="submit" value="로그인"></p>
	</form>
	<%
		String inputUsername = request.getParameter("username");
		String inputPassword = request.getParameter("password");
		int inputFlag = 0;
		
		if (inputUsername != null && inputPassword != null){
			boolean adminExists = checkAdminUsername(inputUsername, inputPassword);
			inputFlag = 1;
			
			if (adminExists){
				out.println("로그인 성공!");  // 클라이언트로 HTML 형식의 결과가 전송됨, 입력데이터를 웹 브라우저에 출력하는 함수 
			}
			else {
				out.println("로그인 실패, 관리자 계정이 아닙니다.");
			}
			
		}
	%>

	<%! 
		boolean checkAdminUsername(String username, String password)
		{
			return ("admin".equals(username) && password.equals("password"));
		}
	%>

	<p><a href="login.jsp">다시 로그인 화면으로 </a></p>

